160 B=B+1:P=P-1
170 GOTO 120
180 FOR X=1 TO 32 
190 DISPLAY AT(X);">";
195 NEXT X
200 RETURN
210 FOR X=32 TO 1 STEP -1
220 DISPLAY AT(X);"<";
225 NEXT X
230 RETURN
